<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FantasticFood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/secondary_light</item>
        <item name="colorOnPrimary">@color/ternary_white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="menu_item_text">
        <item name="android:textColor">@color/ternary_white</item>
        <item name="fontFamily">@font/sanista</item>
        <item name="android:textSize">25dp</item>
    </style>


    <style name="Theme.FantasticFood.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:textColor">@color/ternary_white</item>
        <item name="android:fontFamily">@font/sanista</item>
        <item name="android:textSize">20dp</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="hintTextColor">@color/ternary_white</item>
        <item name="android:textColorHint">@color/ternary_white</item>
        <item name="startIconTint">@color/ternary_white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="endIconTint">@color/ternary_white</item>
    </style>

    <style name="SearchInputStyle">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:fontFamily">@font/sanista</item>
        <item name="android:textSize">20dp</item>
        <item name="backgroundTint">@color/secondary_light</item>
        <item name="hintTextColor">@color/primary_dark</item>
        <item name="android:textColorHint">@color/primary_dark</item>
        <item name="startIconTint">@color/primary_dark</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="OutlinedButton">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:layout_marginVertical">30dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:fontFamily">@font/sanista</item>

    </style>

    <style name="FilledButton">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">30dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/ternary_white</item>
        <item name="android:fontFamily">@font/sanista</item>
    </style>

    <style name="back_button">
        <item name="android:src">@drawable/back</item>
        <item name="android:layout_marginVertical">25dp</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="tint">@color/primary_dark</item>
    </style>

    <style name="star">
        <item name="android:src">@drawable/star</item>
        <item name="tint">@color/primary_dark</item>
    </style>

    <style name="appbar_text">
        <item name="fontFamily">@font/sanista</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="image_gallery">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="minHeight">200dp</item>
        <item name="minWidth">300dp</item>
    </style>

    <style name="single_recipe_title">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/sanista</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="profile_heading">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="fontFamily">@font/sanista</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="profile_nav_button">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/sanista</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ternary_white</item>
    </style>

</resources>