<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sander.fantasticfood">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/food_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/food_logo_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.FantasticFood">
        <activity android:name=".UserInterface.ProfileFragments.NewRecipeActivity"
            android:theme="@style/Theme.FantasticFood.NoActionBar"/>
        <activity
            android:name=".UserInterface.MainComponents.MyProfileActivity"
            android:theme="@style/Theme.FantasticFood.NoActionBar" />
        <activity
            android:name=".UserInterface.MainComponents.SingleRecipe"
            android:theme="@style/Theme.FantasticFood.NoActionBar" />
        <activity
            android:name=".UserInterface.AuthenticationActivity"
            android:theme="@style/Theme.FantasticFood.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserInterface.MainActivity"
            android:theme="@style/Theme.FantasticFood.NoActionBar" />
    </application>

</manifest>